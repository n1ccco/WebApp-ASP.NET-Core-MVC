@model IEnumerable<WebApp.Models.Comment>

@{
    ViewData["Title"] = "Comments";
}
@functions {
	public string Truncate(string value, int length)
	{
		if (value.Length <= length)
		{
			return value;
		}
		else
		{
			return value.Substring(0, length) + "...";
		}
	}
}

<h1>Comments</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDateTime)
            </td>
            <td>
	            @Truncate(item.Post.Body, 100)

            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary m-1">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary m-1">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger m-1">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
